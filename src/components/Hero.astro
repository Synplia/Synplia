---
interface Props {
  translations: {
    hero: {
      title: string;
      subtitle: string;
      tagline: string;
      cta: {
        projects: string;
        contact: string;
      };
    };
  };
}

const { translations } = Astro.props;
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-primary via-primary/20 to-primary">
  <!-- Animated background -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_120%,rgba(65,179,163,0.1),rgba(65,179,163,0)_70%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_80%_20%,rgba(42,157,143,0.1),rgba(42,157,143,0)_70%)]"></div>
    <!-- Animated grid -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(65,179,163,0.15)_1.5px,transparent_1px),linear-gradient(to_bottom,rgba(65,179,163,0.15)_1.5px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_at_center,transparent_20%,black_70%)] opacity-25"></div>
  </div>

  <div class="relative container mx-auto px-6 pt-32 pb-24">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Glowing effect behind title -->
      <div class="absolute top-1/2 left-50 -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-secondary opacity-10 blur-[128px] rounded-full"></div>
      
      <div class="relative">
        <!-- GitHub Icon -->
