---

<section id="about" class="py-20 bg-primary">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16 text-white">
      {translations.about.title}
    </h2>
    
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <div class="relative">
        <div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl shadow-lg transform hover:scale-105 transition-transform duration-300">
          <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
            <div class="w-16 h-16 bg-gradient-cool rounded-2xl rotate-45 flex items-center justify-center">
              <svg class="w-8 h-8 text-white -rotate-45" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 7L12 3L4 7M20 7L12 11M20 7V17L12 21M12 11L4 7M12 11V21M4 7V17L12 21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
          <div class="mt-8">
            <p class="text-lg text-white/90 leading-relaxed mb-6">
              {translations.about.description}
            </p>
            <p class="text-lg text-white/90 leading-relaxed">
              {translations.about.philosophy.title}
            </p>
            <ul class="mt-4 space-y-4">
              {translations.about.philosophy.items.map((item, index) => (
                <li class="flex items-start">
                  <span class="flex items-center justify-center w-8 h-8 bg-accent/20 rounded-lg mr-4 flex-shrink-0">
                    <span class="text-accent-light">0{index + 1}</span>
                  </span>
                  <div>
                    <span class="block font-medium text-white mb-1">{item.title}</span>
                    <span class="text-white/80">{item.description}</span>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-6">
        {skills.map((skill) => (
          <div class="bg-white/10 backdrop-blur-sm p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="flex items-center mb-4">
              <svg class="w-8 h-8 text-accent" viewBox="0 0 24 24" fill="currentColor">
                <path d={skill.icon}/>
              </svg>
              <h3 class="text-xl font-semibold text-white ml-3">
                {skill.category}
              </h3>
            </div>
            <div class="flex flex-wrap gap-2">
              {skill.items.map((item) => (
                <span class="px-3 py-1 bg-accent/20 text-accent-light rounded-full text-sm font-medium">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>