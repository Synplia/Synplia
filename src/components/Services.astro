---
interface Props {
  translations: {
    services: {
      title: string;
      items: {
        title: string;
        description: string;
        features: {
          name: string;
          desc: string;
        }[];
      }[];
    };
  };
}

const { translations } = Astro.props;

const icons = [
  `<path d="M13 17l5-5-5-5M6 17l5-5-5-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  `<path d="M21 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6M12 3v12M8 7l4-4 4 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  `<path d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  `<path d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z M12 8v4l3 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`
];
---

<section id="services" class="py-20 bg-gradient-cool">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16 text-white">
      {translations.services.title}
    </h2>
    
    <div class="grid md:grid-cols-2 gap-8">
      {translations.services.items.map((service, index) => (
        <div class="group bg-white/10 backdrop-blur-sm rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="p-8">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center group-hover:bg-accent transition-colors duration-300">
                <svg 
                  class="w-6 h-6 text-accent-light group-hover:text-white transition-colors duration-300" 
                  viewBox="0 0 24 24" 
                  fill="none"
                  set:html={icons[index]}
                />
              </div>
              <h3 class="text-xl font-semibold text-white ml-4">
                {service.title}
              </h3>
            </div>
            
            <p class="text-white/90 mb-6">
              {service.description}
            </p>

            <div class="grid grid-cols-2 gap-4">
              {service.features.map((feature) => (
                <div class="space-y-1">
                  <div class="font-medium text-accent-light">
                    {feature.name}
                  </div>
                  <div class="text-sm text-white/80">
                    {feature.desc}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>